<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <TextView
      android:textSize="20dp"
      android:textColor="#000000"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/txt_one_"/>
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="弹出对话框!"
        android:layout_centerInParent="true" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义对话框"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt1"
      />
  <Button
      android:id="@+id/btn_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/txt1"
      android:background="#ffffff"
      android:textColor="#000000"
      android:layout_marginTop="10dp"
      android:text="菜单栏"
      android:layout_marginLeft="10dp"
      android:layout_toRightOf="@+id/btn1"/>
  <Button
      android:layout_marginTop="10dp"
      android:id="@+id/btn_tiaozhuan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="跳转第二个界面"
      android:layout_below="@+id/btn1"
      android:layout_centerHorizontal="true"
      android:background="#ffffff"/>
  <Button
      android:id="@+id/simpadapter_tiaozhuan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/btn_menu"
      android:text="SimpAdapter"
      android:layout_below="@+id/txt1"
      android:background="#ffffff"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"/>
  <Button
      android:id="@+id/actionmode_menu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="10dp"
      android:layout_below="@+id/txt1"
      android:text="action_menu"
      android:background="#ffffff"
      android:layout_marginTop="10dp"
      android:layout_toRightOf="@+id/simpadapter_tiaozhuan"
      android:layout_marginLeft="10dp"/>
</RelativeLayout>
